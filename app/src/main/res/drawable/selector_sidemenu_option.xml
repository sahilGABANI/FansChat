<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="#D2D3D7" />
            <stroke android:width="1dip" android:color="#D2D3D7" />
            <padding android:bottom="0dip" android:left="0dip" android:right="0dip" android:top="0dip" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="#e9eaed" />
            <stroke android:width="1dip" android:color="#D6D6D6" />
            <padding android:bottom="0dip" android:left="0dip" android:right="0dip" android:top="0dip" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#DDDEE0" />
            <stroke android:width="1dip" android:color="#D2D3D7" />
            <padding android:bottom="0dip" android:left="0dip" android:right="0dip" android:top="0dip" />
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle">
            <solid android:color="#e9eaed" />
            <stroke android:width="1dip" android:color="#d2d4d7" />
            <padding android:bottom="0dip" android:left="0dip" android:right="0dip" android:top="0dip" />
        </shape>
    </item>
</selector>